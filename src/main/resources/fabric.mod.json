{
	"schemaVersion": 1,
	"id": "disconnect-timer",
	"version": "${version}",
	"name": "Disconnect Timer",
	"description": "Adds a configurable timer to the disconnect button. inspired by MCSR Ranked",
	"authors": [
		"ThatCuteOne"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "GPL-3.0",
	"icon": "assets/disconnect-timer/icon.png",
	"environment": "client",
	"entrypoints": {
        "modmenu": [
          "thatcuteone.disconnecttimer.ModMenuIntegration"
        ],
		"client": [
			{
				"value": "thatcuteone.disconnecttimer.DisconnectTimerClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		{
			"config": "disconnect-timer.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": ">=1.21",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*",
        "yet_another_config_lib_v3": ">=3.7.1+1.21.1-fabric"
	}
}